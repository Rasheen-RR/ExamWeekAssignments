@model CalculatorModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="leftNumber" class="control-label">Left Number</label>
                <input asp-for="leftNumber" class="form-control" />
                <span asp-validation-for="leftNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="operat" class="control-label">Operator (+, -, /, *)</label>
                <input asp-for="operat" class="form-control" />
                <span asp-validation-for="operat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rightNumber" class="control-label">Right Number</label>
                <input asp-for="rightNumber" class="form-control" />
                <span asp-validation-for="rightNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="result" class="control-label">Result</label>
                <input asp-for="result" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Equals" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>